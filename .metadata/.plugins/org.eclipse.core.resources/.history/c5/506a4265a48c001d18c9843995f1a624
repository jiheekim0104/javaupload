package ch02.sec01;

import java.util.Scanner;

public class VarEx30 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in); 

		System.out.print("몸무게:");
		String mom  =sc.next();
		
		System.out.print("키:");
		String key  =sc.next();
		
		System.out.print("성별:");
		String s1 = sc.next();
		System.out.println(true);
		
		String s2 = sc.next();
		System.out.println(false);
	
		
		int mom1 = Integer.parseInt(mom);
		int key1 = Integer.parseInt(key);
		int cul = mom1/key1*key1;
		
		System.out.println("-------------------------");
		System.out.println("당신의 체질향 지수는:"+" "+ cul +"입니다.");
		
		if (cul<18.5) {System.out.println("저체중입니다.");}
		else if (18.5<=cul && cul<23) {System.out.println("정상입니다.");}
		else if (23<=cul && cul<25) {System.out.println("과체중입니다.");}
		else {System.out.println("비만입니다.");}
			
		System.out.println("-------------------------");
		
		
	}

}
